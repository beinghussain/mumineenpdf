<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/list_selector_background"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/card_zero_margin"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="1dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        android:background="#22424242"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Mumineen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/download_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sectionHeader"
            android:layout_toRightOf="@+id/sectionHeader"
            android:text=""
            android:textColor="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/remove"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:tint="@color/colorGrey"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        <ImageButton
            android:id="@+id/download_all"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/remove"
            android:layout_toStartOf="@+id/remove"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@android:drawable/stat_sys_download_done" />

    </RelativeLayout>

</android.support.v7.widget.CardView>