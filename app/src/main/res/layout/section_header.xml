<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcfcfc"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/card_zero_margin"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="1dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        android:background="#22424242"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fcfcfc"
        android:padding="8dp">

        <TextView
            android:id="@+id/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Mumineen"
            android:textColor="#494A51"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/download_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sectionHeader"
            android:layout_marginLeft="8dp"
            android:text="@string/all_files_downloaded"
            android:textColor="@color/transparentBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:textColor="@color/colorGrey"
            android:text="Delete" />

    </RelativeLayout>

</android.support.v7.widget.CardView>